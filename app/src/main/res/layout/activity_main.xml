<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenjunfan.myluncher.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        >
        
        
        <Button
            android:text="拨打电话"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:id="@+id/btn_bohao"
            android:background="@android:color/black"
            android:onClick="bohao"
            />
        <Button
            android:text="所有电话"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:onClick="allnumber"
            android:id="@+id/btn_allnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:background="@android:color/black"

            />
        
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        >

        <Button
        android:text="下象棋"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="allnumber"
        android:id="@+id/btn_xiangqi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/black"

        />

        <Button
            android:text="照相"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_takephotos"
            android:background="@android:color/black"
            android:onClick="bohao"
            />
        <Button
            android:text="看照片"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:onClick="allnumber"
            android:id="@+id/btn_watchphotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"

            />




    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxx年xx月xx日\n xx点xx分"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/TV_time"
        android:onClick="presstime"
        />


    <LinearLayout
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="陈波"
            android:textSize="50dp"
            android:id="@+id/btn_chenbo"
            />
        <Button
            android:background="@android:color/black"

            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="岳群"
            android:id="@+id/btn_yuequn"
            android:textSize="50dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_zhangmeifen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@android:color/black"
            android:text="岳贵兴"
            android:textColor="@android:color/white"
            android:textSize="50dp" />
        <Button
            android:background="@android:color/black"
            android:id="@+id/btn_chenjunfan"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="陈俊帆"

            android:textSize="50dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@android:color/black"
            android:id="@+id/btn_yuemin"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="岳悯"
            android:textSize="50dp"
            />
        <Button
            android:background="@android:color/black"
            android:id="@+id/btn_xiaoyin"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="小尹"

            android:textSize="50dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="陈波"
            android:textSize="50dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="陈波"

            android:textSize="50dp"

            />


    </LinearLayout>
    
</LinearLayout>
